<MainScreen>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 0
        canvas.before:
            Color:
                rgba: 238/255, 245/255, 255/255, 1 #whiteblue
            Rectangle
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: None
            height: '36dp'
            spacing: 230
            padding: 0, -20
            pos_hint: {'center_x': 0.5}

            Button:
                id: left_button
                background_color: 0, 1, 1, 0
                size_hint: None, None
                size: 64, 64  # Set size according to the icon size
                on_press: app.root.current = 'setting'
                Image:
                    source: 'png_files/set_icon.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                id: center_button
                background_color: 0, 1, 1, 0
                size_hint: None, None
                size: 64, 64  
                Image:
                    source: 'png_files/mic_icon.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            Button:
                id: right_button
                background_color: 0, 1, 1, 0
                size_hint: None, None
                size: 64, 64  
                on_press: app.root.current = 'second'
                Image:
                    source: 'png_files/speak_icon.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 

        Camera:
            id: camera
            resolution: (640, 480) 
            size_hint: 1, 0.8
            play: True

 

        BoxLayout:
            size_hint_y: None
            height: '100dp' 
            padding: 0,0,0,0
            pos_hint: {'center_x': 0.86}
            spacing: 50
            Button:
                id: camera_button
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)   
                on_press: root.capture_image()
                canvas.before:
                    Color:
                        rgba:  23/255, 107/255, 135/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]
                Image:
                    source: 'png_files/button_cam.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

<SecondScreen>:
    name: 'second'
    BoxLayout:
        orientation: 'vertical'
        padding: 60, 20
        spacing: 0
        canvas.before:
            Color:
                rgba: 238/255, 245/255, 255/255, 1  
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: 0.1 

        BoxLayout:
            size_hint_y: None 
            pos_hint: {'center_x': 0.5}
            height: '350dp'           
            spacing: 50
            Button:
                id: main_button
                padding: 10, 20
                text: root.product_data if root.product_data else ''                             #Binds product_data to the button text(텍스트에 출력)
                pos_hint: {'center_y': 0.5}
                size_hint_y: 1
                text_size: self.size 
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)                                 
                halign: 'center'
                valign: 'middle'
                font_size: 20
                font_name: 'NanumGothicBold.ttf'  # 한글을 지원하는 폰트를 추가함.
                on_press: root.announce_product()
                canvas.before:
                    Color:                        
                        rgba: 134/255, 182/255, 246/255, 1 
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [18, 18, 18, 18]   

                Image:
                    size: 1000, 500
                    source: 'png_files/information2.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y + 340 

        BoxLayout:
            size_hint_y: 0.1  

        #back button
        BoxLayout:
            size_hint_y: None
            height: '100dp'  
            pos_hint: {'center_x': 0.6}
            spacing: 50
            Button:
                id: back_button
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'main'
                canvas.before:
                    Color:
                        rgba:  23/255, 107/255, 135/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]  
                Image:
                    source: 'png_files/button_back.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            #basketscreen button
            Button:
                id: basket_button
                size_hint: None, None
                size: 200, 200
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)
                on_press: root.add_to_basket()
                on_press: app.root.current = 'basket'
                canvas.before:
                    Color:
                        rgba: 23/255, 107/255, 135/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]
                Image:
                    source: 'png_files/button_bas.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y 


<BasketScreen>:
    name: 'basket'
    BoxLayout:   # 바탕 정보
        orientation: 'vertical'
        padding: 40, 60
        spacing: 70
        canvas.before:
            Color:
                rgba: 238/255, 245/255, 255/255, 1 
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint_y: 0.1 

        BoxLayout:   # 중앙정보
            orientation: 'vertical'
            size_hint_y: None 
            pos_hint: {'center_x': 0.5}
            padding: 0, -55
            height: '320dp'           

            Button:
                id: main_button
                text: root.basket_list
                size_hint_y: 1
                font_size: 50
                text_size: self.size 
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)                                 
                halign: 'left'
                valign: 'top'
                font_size: 30
                font_name: 'NanumGothicBold.ttf'  # 한글을 지원하는 폰트를 추가함.
                on_press: root.announce_basket()
                canvas.before:
                    Color:       # 중앙버튼                 
                        rgba: 134/255, 182/255, 246/255, 1   
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [18, 18, 18, 18]

                Image:
                    size: 300, 100
                    source: 'png_files/button_trash2.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y + 270
            
        BoxLayout:
            size_hint_y: 0.1


        BoxLayout:
            size_hint_y: None
            pos_hint: {'center_x': 0.9}
            height: '100dp'  
            pos_hint: {'center_x': 0.44}
            spacing: 50
            padding: 60, 0

            Button:
                id: pay_button
                text: root.total_price_text
                #pos_hint: {'center_x': -0.5}
                size_hint: None, None
                halign: 'right'
                valign: 'middle'
                font_size: 30
                size: 560, 150
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'pay'
                canvas.before:
                    Color:
                        rgba:  23/255, 107/255, 135/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]  
                Image:
                    source: 'png_files/button_card.png'  
                    center_x: self.parent.center_x -180
                    center_y: self.parent.center_y

        BoxLayout:
            size_hint_y: None
            height: '100dp'  
            pos_hint: {'center_x': 0.50}
            padding: 32, -30
            spacing: 50

            Button:
                id: back_button
                size_hint: None, None
                size: 250, 170
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: app.root.current = 'main'
                canvas.before:
                    Color:
                        rgba:  23/255, 107/255, 135/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]  
                Image:
                    source: 'png_files/button_back.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y

            #trashbutton
            Button:
                id: basket_button
                size_hint: None, None
                size: 250, 170
                background_normal: ''
                background_color: (48/255, 84/255, 150/255, 0)  
                on_press: root.reset_basket()  # Call the reset function when pressed
                canvas.before:
                    Color:
                        rgba: 23/255, 107/255, 135/255, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [32, 32, 32, 32]
                Image:
                    source: 'png_files/button_trash.png'  
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y


